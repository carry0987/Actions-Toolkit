{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "importHelpers": true,
        "strict": true,
        "outDir": "dist",
        "paths": {
            "@/*": ["./src/*"]
        },
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "test/**/*", "rollup.config.ts"],
    "exclude": ["node_modules", "dist"]
}
